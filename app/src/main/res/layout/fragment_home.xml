<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">


    <ImageButton
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/diyanat_logo" />

    <androidx.cardview.widget.CardView
        android:id="@+id/our_text1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="50dp"
        app:cardCornerRadius="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="khan" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="14dp"
            android:text="hi ali afghan"
            android:textAlignment="center"
            android:textSize="25dp" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/our"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/imageView"
        android:layout_marginBottom="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="this application is very good becaouse it is important"
                android:textAlignment="center"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/Relative_layout"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@+id/our"
        android:layout_marginTop="1dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp">


        <LinearLayout
            android:id="@+id/Linear_layout_inner_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="7dp"
                android:layout_weight="1"
                android:background="@drawable/background"
                app:cardCornerRadius="12dp">

                <ImageView
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="#008c6b" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="دعاءګانی"
                    android:textAlignment="center" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="7dp"
                android:layout_weight="1"
                android:background="@drawable/background"
                app:cardCornerRadius="12dp">

                <ImageView
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="#008c6b" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:text="اذکار"
                    android:textAlignment="center" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Linear_layout_inner_below"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Linear_layout_inner_top"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/background"
                app:cardCornerRadius="12dp">

                <ImageView
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="#008c6b" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:text="احادیث"
                    android:textAlignment="center" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/background"
                app:cardCornerRadius="12dp">

                <ImageView
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="#008c6b" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:text="غوره ویناوی"
                    android:textAlignment="center" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/Relative_layout"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/zakate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/zakate"
                android:text="زکات" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/tasbih"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tasbih"
                android:text="تسبیح" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp">

            <Button
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/moon_for_date"
                android:text="اسلامی کلیزه" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>